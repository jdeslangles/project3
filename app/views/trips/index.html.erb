<h1>Listing trips</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cover photo</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.name %></td>
    <td><%= trip.description %></td>
    <td><%= trip.cover_photo %></td>
    <td><%= trip.user %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

