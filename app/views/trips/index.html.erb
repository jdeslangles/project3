
<h1>Listing trips</h1>

<table class="table">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Adventurer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%=image_tag trip.cover_photo.mini.url %></td>
    <td><%= trip.name %></td>
    <td><%= trip.description %></td>
    <td><%= trip.user.username %></td>
    <td><%= link_to 'Show', trip %></td>
    <td>
        <% if can? :update, trip.user %>
          <%= link_to 'Edit', edit_trip_path(trip) %>
          <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%end%>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, @trip %>
  <%= link_to 'New Trip', new_trip_path %>
<%end%>