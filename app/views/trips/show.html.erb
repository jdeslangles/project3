<p id="notice"><%= notice %></p>

<div class="map_wrapper">
  <div class="map_border">
    <div id="googleMap"> </div>
  </div>
</div>

<p>
  <b>Name:</b>
  <%= @trip.name %>
</p>

<p>
  <b>Description:</b>
  <%= @trip.description %>
</p>

<p>
  <b>Cover photo:</b>
  <%= @trip.cover_photo %>
</p>

<p>
  <b>User:</b>
  <%= @trip.user %>
</p>

<p>
  <b>Markers:</b>
  <ul>
    <% @markers.each do |marker| %>
      <li id="name"><%= marker.name %></li>
      <li id="address"><%= marker.address %></li>
      <li id="longitude"><%= marker.longitude %></li>
      <li id="latitude"><%= marker.latitude %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
