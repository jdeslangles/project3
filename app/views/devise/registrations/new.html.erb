<% @body_class = "sign_up" %>


<div class="row">
  <div class="col-md-9 col-md-offset-2">
    <div class="sign_up_form">
    <h2>Sign up</h2>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
        <div class="col-md-6">
          <div><%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true, class:"input_field", :placeholder => "Enter a valid email address" %></div>
          <div>
            <%= f.label :firstname, 'First Name' %><br>
            <%= f.text_field :firstname, class:"input_field", :placeholder => "Enter your first name" %>
          </div>
          <div>
            <%= f.label :lastname, 'Last Name' %><br>
            <%= f.text_field :lastname, class:"input_field", :placeholder => "Enter your last name" %>
          </div>
          <div>
            <%= f.label :username %><br>
            <%= f.text_field :username, class:"input_field", :placeholder => "Enter your username" %>
          </div>
          <div>
            <%= f.label :avatar %><br>
            <%= f.file_field :avatar, class: "centered", :onchange =>"validateFiles(this);", :data => { :max_file_size => 1.megabyte }%><br/><br>
          </div>
        </div>
        <div class="col-md-6">
          <div>
            <%= f.label :bio %><br>
            <%= f.text_area :bio, :size => "30x5", class:"input_field", :placeholder => "Tell us about yourself" %>
          </div>
          <div>
            <%= f.label :birthdate %><br>
            <%= f.date_select :birthdate, start_year: (Time.now.year - 100), end_year: (Time.now.year)   %>
          </div>

          <div>
            <%= f.label :location %><br>
            <%= f.text_field :location, class:"input_field", :placeholder => "Where are you from?" %>
          </div>
        </div>
      </div>
        <div>
          <%= f.label :password %><br />
          <%= f.password_field :password, class:"input_field", :placeholder => "Enter your password" %>
        </div>
        <div>
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class:"input_field", :placeholder => "Enter your password again" %>
        </div>
        <div>
          <br>
          <%= f.submit "Sign up", class:"btn btn-sm btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>