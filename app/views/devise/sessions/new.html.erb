<% @body_class = "sign_in" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="sign_in_form">

      <h2>Login</h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true, class:"input_field", :placeholder => "Enter your email address" %></div>

        <div><%= f.label :password %><br />
        <%= f.password_field :password, class:"input_field", :placeholder => "Enter your password" %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div>
          <br>
          <%= f.submit "Login", class:"btn btn-sm btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>