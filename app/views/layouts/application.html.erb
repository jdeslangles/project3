<!DOCTYPE html>
<html>
<head>
  <title>Footsteps</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE']}&sensor=false" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex8-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
      </button>
      <%= link_to("FootSteps", root_path, class: "navbar-brand") %>
    </div>
    <div class="collapse navbar-collapse navbar-ex8-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to('Trips', trips_path)  %></li>
        <li><%= link_to('Markers', markers_path)  %></li>
        <li><%= link_to('Users', users_path)  %></li>
        <% if current_user %>
          <li><%= link_to('My Profile', my_profile_path) %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">

          <% unless request.env["PATH_INFO"] == "/" %>
            <li>
              <%= form_tag root_path, class:"navbar-form navbar-left", html: {method: :post} do |f| %>
                <div class="form-group">
                  <%= text_field_tag :q, params[:q], class:"form-control" %>
                </div>
              <%= submit_tag 'Search!' , name: nil,  class:"btn btn-small"  %>
              <% end %>
            </li>
            <% end %>
        <% unless current_user %>
        <li class="nav-signup"><%= link_to('Sign up', new_user_registration_path)  %></li>
        <% end %>

        <li class="nav-user">
          <% if current_user %>
            <%= link_to "Log Out, #{current_user.username.humanize}!" , destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to 'Login', login_path %>
          <% end %>
        </li>
      </ul>

    </div>
  </nav>

<div class="container">
<%= yield %>
</div>
  <footer>
    <%= yield :scripts %>
  </footer>
</body>
</html>
